@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<AMPA_Electronics_Store4.Models.Admin>
@using AMPA_Electronics_Store4.Models
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Admins")">Create Account</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ADMIN_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADMIN_USERNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADMIN_EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADMIN_PASSWORD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADMIN_CONTACT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADMIN_ADDRESS)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        Admin a = (Admin)Session["Admin"];
        if (a.ADMIN_ID == item.ADMIN_ID)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ADMIN_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADMIN_USERNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADMIN_EMAIL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADMIN_PASSWORD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADMIN_CONTACT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADMIN_ADDRESS)
            </td>
            <td>
                <a class="btn btn-primary glyphicon glyphicon-edit" href="@Url.Action("Edit", "Edit", new { id = item.ADMIN_ID })"></a>|
                <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details", "Details", new { id = item.ADMIN_ID })"></a>|
                <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Delete", new { id = item.ADMIN_ID })"></a>
            </td>
        </tr>
        }
    }

</table>
